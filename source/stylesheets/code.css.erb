<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>

code {
  padding: 0 0.5em;
  border: 1px solid #ddd;
  border-radius: 3px;
  background: #eee;
}

code, pre {
  font-family: 'Monaco', monospace;
}

.code-title {
  color: #aaa;
  font-weight: 300;
  margin: 1.5em 0 -0.5em;
}

.highlight {
  position: relative;
  z-index: 1;
  border: 1px solid #ddd;
  margin-bottom: 2em;
  padding: 10px;
  border-radius: 3px;
  background: #222;
  font-size: 0.8em;
  font-weight: normal;
  overflow: scroll;
  line-height: 1.5em;
  border-radius: 10px;
}

.highlight:after {
  position: absolute;
}

.highlight .gutter {
  padding-right: 0.5em;
  color: #ddd;
  background: #555;
}
